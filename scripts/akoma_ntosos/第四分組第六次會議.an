        <speech by="#李念祖">
          <from>李念祖</from>
          <p>我提議擱置。</p>
        </speech>
        <speech by="#許玉秀">
          <from>許玉秀</from>
          <p>擱置。</p>
        </speech>
        <speech by="#不知名">
          <from>不知名</from>
          <p>附議。</p>
        </speech>
        <speech by="#張靜">
